---
import { Building2, Rocket, Briefcase, ShoppingBag, Users, Laptop } from 'lucide-react';

const targets = [
  { label: 'PYMES', icon: Building2 },
  { label: 'Startups', icon: Rocket },
  { label: 'Agencias', icon: Briefcase },
  { label: 'E-commerce', icon: ShoppingBag },
  { label: 'Consultores', icon: Users },
  { label: 'Negocios Digitales', icon: Laptop },
];
---

<section id="target" class="py-24 bg-dark-light">
  <div class="max-w-7xl mx-auto px-6 text-center">
    
    <h2 class="text-3xl md:text-5xl font-display font-bold mb-16 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700">
      Dise√±ado para <span class="text-white">Escalar</span>
    </h2>

    <div class="grid grid-cols-2 md:grid-cols-3 lg:grid-cols-6 gap-4 md:gap-8">
      {targets.map((target, index) => (
        <div 
          class="flex flex-col items-center gap-4 p-6 rounded-2xl bg-white/5 border border-white/5 hover:border-primary/30 hover:bg-white/10 transition-all duration-300 hover:-translate-y-1 animate-on-scroll opacity-0 scale-90"
          style={`transition-delay: ${index * 100}ms`}
        >
          <div class="w-12 h-12 rounded-full bg-dark flex items-center justify-center text-primary mb-2">
            <target.icon className="w-6 h-6" />
          </div>
          <span class="font-medium text-gray-300">{target.label}</span>
        </div>
      ))}
    </div>

  </div>
</section>

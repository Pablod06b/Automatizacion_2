---
import { Mail, Phone, MapPin, Calendar, Send } from "lucide-react";
---

<section id="contacto" class="py-24 bg-dark-light relative">
  <div class="max-w-7xl mx-auto px-6">
    <div class="flex flex-col lg:flex-row gap-16">
      <!-- Contact Info -->
      <div
        class="lg:w-1/3 space-y-8 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700"
      >
        <div>
          <h2 class="text-3xl md:text-5xl font-display font-bold mb-4">
            ¿Quieres dejar de perder <span class="text-gradient">tiempo?</span>
          </h2>
          <p class="text-gray-400 text-lg">
            Cuéntame tu problema y te diré exactamente cómo automatizarlo.
            Agenda una llamada gratuita hoy mismo.
          </p>
        </div>

        <div class="space-y-6">
          <div class="flex items-start gap-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary mt-1"
            >
              <Mail className="w-5 h-5" />
            </div>
            <div>
              <h3 class="font-bold text-white">Email</h3>
              <p class="text-gray-400">info@automate.ia</p>
            </div>
          </div>

          <div class="flex items-start gap-4">
            <div
              class="w-10 h-10 rounded-full bg-primary/10 flex items-center justify-center text-primary mt-1"
            >
              <Calendar className="w-5 h-5" />
            </div>
            <div>
              <h3 class="font-bold text-white">Agenda una Videollamada</h3>
              <a
                href="https://calendly.com/ia_automate"
                target="_blank"
                rel="noopener noreferrer"
                class="text-primary hover:underline font-semibold"
                >Reserva tu hueco aquí -></a
              >
            </div>
          </div>
        </div>
      </div>

      <!-- Form -->
      <div
        class="lg:w-2/3 bg-white/5 border border-white/10 rounded-2xl p-8 lg:p-10 animate-on-scroll opacity-0 translate-y-8 transition-all duration-700"
        style="transition-delay: 200ms;"
      >
        <form id="contactForm" class="space-y-6">
          <!--https://formspree.io/f/mgolwwkz -->
          <div class="grid md:grid-cols-2 gap-6">
            <div class="space-y-2">
              <label for="name" class="text-sm font-medium text-gray-300"
                >Nombre</label
              >
              <input
                type="text"
                id="name"
                name="name"
                required
                class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
                placeholder="Tu nombre"
              />
            </div>
            <div class="space-y-2">
              <label for="email" class="text-sm font-medium text-gray-300"
                >Email</label
              >
              <input
                type="email"
                id="email"
                name="email"
                required
                class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
                placeholder="tu@email.com"
              />
            </div>
          </div>

          <div class="space-y-2">
            <label for="company" class="text-sm font-medium text-gray-300"
              >Empresa / Web</label
            >
            <input
              type="text"
              id="company"
              name="company"
              class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              placeholder="Nombre de tu negocio"
            />
          </div>

          <div class="space-y-2">
            <label for="message" class="text-sm font-medium text-gray-300"
              >Mensaje</label
            >
            <textarea
              id="message"
              name="message"
              rows="4"
              required
              class="w-full bg-dark border border-white/10 rounded-lg px-4 py-3 text-white focus:outline-none focus:border-primary focus:ring-1 focus:ring-primary transition-colors"
              placeholder="¿Qué proceso te gustaría automatizar? Cuéntanos tu idea..."
            ></textarea>
          </div>

          <button
            type="submit"
            id="submitInfo"
            class="w-full flex items-center justify-center gap-2 bg-primary hover:bg-primary-dark text-white font-semibold py-4 rounded-lg transition-all transform hover:-translate-y-1 text-lg disabled:opacity-50 disabled:cursor-not-allowed"
          >
            <span>Cuéntanos tu negocio (sin compromiso)</span>
            <Send className="w-5 h-5 icon" />
          </button>
          <p id="formStatus" class="text-center text-sm mt-4 hidden"></p>
          <p class="text-center text-gray-500 text-sm mt-4">
            En menos de 48h te decimos qué puedes automatizar.
          </p>
        </form>
      </div>
    </div>
  </div>
</section>

<script>
  const form = document.getElementById("contactForm");
  const submitBtn = document.getElementById("submitInfo");
  const statusMsg = document.getElementById("formStatus");
  const btnText = submitBtn?.querySelector("span");
  // const btnIcon = submitBtn?.querySelector('.icon'); // Icon might not be selectable this way if it's a React component rendered as SVG, but usually usually it's fine.

  if (form) {
    form.addEventListener("submit", async (e) => {
      e.preventDefault();

      if (!submitBtn || !statusMsg || !btnText) return;

      // Loading state
      const originalText = btnText.innerText;
      btnText.innerText = "Enviando...";
      submitBtn.setAttribute("disabled", "true");
      statusMsg.classList.add("hidden");
      statusMsg.className = "text-center text-sm mt-4 hidden"; // reset classes

      const formData = new FormData(form as HTMLFormElement);
      const data = Object.fromEntries(formData.entries());

      try {
        const response = await fetch(
          "https://tameika-cryptocrystalline-supersilently.ngrok-free.dev/prueba-de-formulario/d121f594-5ac1-41e0-9862-873c9d5f6e8f",
          {
            method: "POST",
            headers: {
              "Content-Type": "application/json",
              "ngrok-skip-browser-warning": "true", // Skips the ngrok warning page
            },
            body: JSON.stringify(data),
          },
        );
        if (response.ok) {
          statusMsg.innerText = "¡Mensaje enviado! Te contactaremos pronto.";
          statusMsg.classList.remove("hidden");
          statusMsg.classList.add("text-green-400");
          (form as HTMLFormElement).reset();
        } else {
          throw new Error("Error en el envío");
        }
      } catch (error) {
        console.error("Error:", error);
        statusMsg.innerText =
          "Hubo un error al enviar. Por favor, intenta más tarde o escríbenos por email.";
        statusMsg.classList.remove("hidden");
        statusMsg.classList.add("text-red-400");

        // Check for mixed content/localhost issue
        if (
          window.location.protocol === "https:" &&
          (error as Error).message.includes("Failed to fetch")
        ) {
          statusMsg.innerText =
            "Error: No se puede conectar a n8n local desde HTTPS. Usa el email por ahora.";
        }
      } finally {
        btnText.innerText = originalText;
        submitBtn.removeAttribute("disabled");
      }
    });
  }
</script>
